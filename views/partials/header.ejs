  </script>

  <link rel="stylesheet" href="style.css">
  <link rel="shortcut icon" href="images/logo.png" type="image/x-icon">
  <title>Form Handler</title>
</head>

<body>
  <style>
    .nav-item>a:hover {
      background-color: #6c757d;
    }
  </style>
  <div class="container">
    <header class="d-flex flex-wrap justify-content-center py-3 mb-4 border-bottom">
      <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-light text-decoration-none">
        <img src="images/logo.png" class="logo bi me-2" width="50" height="50" alt="logo">
        <span class="fs-4">Form Handler</span>
      </a>

      <ul class="nav nav-pills">
        <li class="nav-item"><a href="/" class="px-4 nav-link text-light item-1" aria-current="page">Home</a></li>
        <li class="nav-item"><a href="/register" class="px-4 nav-link text-light item-2">Register</a></li>
        <li class="nav-item"><a href="/how-to-use" class="px-4 nav-link text-light item-3">How to Use?</a>
        </li>
        <li class="nav-item"><a href="/contact" class="px-4 nav-link text-light item-4">Contact</a></li>
        <%  if(url === "/") { %>
        <script>
          document.querySelector(".item-4, .item-2, .item-3").classList.remove("active");
          document.querySelector(".item-1").classList.add("active");
        </script>
        <%  } else if(url === "/register") { %>
        <script>
          document.querySelector(".item-1, .item-4, .item-3").classList.remove("active");
          document.querySelector(".item-2").classList.add("active");
        </script>
        <%  } else if(url === "/how-to-use") { %>
        <script>
          document.querySelector(".item-1, .item-2, .item-4").classList.remove("active");
          document.querySelector(".item-3").classList.add("active");
        </script>
        <%  } else if(url === "/contact") { %>
        <script>
          document.querySelector(".item-1, .item-2, .item-3").classList.remove("active");
          document.querySelector(".item-4").classList.add("active");
        </script>
        <% } %>
      </ul>
    </header>
  </div>