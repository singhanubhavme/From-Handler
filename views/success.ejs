<%- include("partials/header.ejs") -%>

<div class="px-4 py-5 my-5 text-center text-light">
    <img class="d-block mx-auto mb-4" src="images/logo.png" alt="" width="72" height="72">
    <h1 class="display-5 fw-bold">Success</h1>
    <div class="col-lg-6 mx-auto">
        <% if(username === undefined) { %>
        <p class="lead mb-4">Your form is Submitted Successfully.</p>
        <% } else { %>
        <p class="lead mb-4 display-6">Registered.</p>
        <p class="lead mb-4">Your URL is <br><br> https://form-handler.singhanubhav.me/form/<%= username %> </p>
        <% } %>
        <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
            <button type="button" onclick="history.back()"
                class="btn btn-light text-dark btn-outline-secondary btn-lg px-4">Go Back</button>
        </div>
    </div>
</div>

